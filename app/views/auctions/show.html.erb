<h2><%= @auction.name %></h2>
<div class="row">
  <div class="col-md-4">
		<% vehicles_sold = vehicles_sold(@auction) %>
    <p>
      <strong>Total vehicles sold :</strong>
      <%= vehicles_sold %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
  	<% profit = calculate_profit(@auction) %>
    <p>
      <strong>Total Profit :</strong>
      <%= profit %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
      <strong>Avg Profit per vehicle:</strong>
      <%= (profit.to_f/vehicles_sold.to_f).round(2) %>
    </p>
  </div>
</div>